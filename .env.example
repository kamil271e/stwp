# STWP Environment Configuration
# Copy this file to .env and customize values as needed

# =============================================================================
# Device Configuration
# =============================================================================

# Compute device: cpu, cuda, mps (Apple Silicon)
# If not set, auto-detects best available device
# STWP_DEVICE=cpu

# =============================================================================
# Data Paths
# =============================================================================

# Path to input GRIB data file
STWP_DATA_PATH=data/input.grib

# Path to trained model checkpoint
STWP_MODEL_PATH=data/gnn_fh5.pt

# =============================================================================
# Training Configuration
# =============================================================================

# Train/test split ratio (fraction of data for training)
STWP_TRAIN_RATIO=0.333

# Training batch size
STWP_BATCH_SIZE=8

# Random seed for reproducibility
STWP_RANDOM_STATE=42

# =============================================================================
# Model Configuration
# =============================================================================

# Forecast horizon (number of timesteps to predict)
STWP_FORECAST_HORIZON=1

# Input sequence length (number of historical timesteps)
STWP_INPUT_SIZE=5

# Neighborhood radius for graph construction
STWP_R=2

# Number of graph cells
STWP_GRAPH_CELLS=9

# Scaler type: standard, min_max, max_abs, robust
STWP_SCALER_TYPE=standard

# =============================================================================
# Grid Dimensions
# =============================================================================

# Input grid dimensions (height, width)
STWP_INPUT_DIMS_H=32
STWP_INPUT_DIMS_W=48

# Output grid dimensions (height, width)
STWP_OUTPUT_DIMS_H=25
STWP_OUTPUT_DIMS_W=45

# =============================================================================
# API Configuration
# =============================================================================

# API server host
STWP_API_HOST=0.0.0.0

# API server port
STWP_API_PORT=8888
